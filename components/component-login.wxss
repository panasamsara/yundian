/* pages/component/component-login.wxss */
.phonetext{
  color: #fb452c;
  font-size: 26rpx;
}
.phonetitle{
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  text-align: center;
  margin: 10rpx 0 20rpx;
}
.phoneimg{
  width: 12rpx!important;
  height: 22rpx!important;
}
.active{
  color: #FB452C!important;
}
.wxBg{
  width: 220rpx;
  height: 230rpx;
 margin-left: 140rpx;
 margin-bottom: 16rpx;
}
.sureLogin{
  border-radius: 44rpx;
  color: #ffffff;
  line-height: 88rpx;
  float: none;
  height: 88rpx;
  font-size: 34rpx;
  width: 460rpx;
  margin-top: 40rpx;
  background: -webkit-linear-gradient(left, #ff722b, #fb462b); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #ff722b, #fb462b); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #ff722b, #fb462b); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #ff722b, #fb462b); /* 标准的语法 */
}
.phoneLogin{
  position: fixed;
  z-index: 999999;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(114,114,114,0.5); 
  
}
.phoneModel{
  width: 500rpx;
  height: 530rpx;
  padding: 20rpx;
  vertical-align: middle;
  border-radius: 18rpx;
  /* height:500rpx; */
  position: fixed;
  top: 300rpx;
  left: 110rpx;
  background-color: #ffffff;
  z-index: 9999999;
  text-align: left;
}
.phoneInput>image:nth-of-type(1){
  width: 44rpx;
  height: 60rpx;
  /* float: left; */
  
}
.phoneInput>image{
  vertical-align: middle;
  padding:0 10rpx; 
}
.phoneInput>image:nth-of-type(2){
  width: 44rpx;
  height: 52rpx;
  /* float: left; */
  
}
.center{
  margin-top: 20rpx;
  text-align: center;
}
.phoneInput input{
  vertical-align: middle;
  display: inline-block;
  width: 420rpx;
  height: 66rpx;
  font-size: 28rpx;
  border-left: 2rpx solid #E5E5E5;
  padding-left: 10rpx;
  margin: 30rpx 0;
  /* float: left; */
}
.phoneInput  input:last-of-type{
  width: 250rpx;
}
.phoneInput{
  border-bottom: 1px solid #E5E5E5;
}
.phoneInput .yzCode{
  float: none;
  font-size: 24rpx;
  padding: 0;
  vertical-align: middle;
  line-height: 60rpx;
  color: #999;
  /* margin: 30rpx 0;   */
  width: 168rpx;
  height: 60rpx;
  display: inline-block;
  /* float: left;   */
}