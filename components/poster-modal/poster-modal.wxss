/* components/poster-modal/poster-modal.wxss */
.posterModal{
  width: 100%;
  height: 100%;
}

.shareView{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index:100000;
}

.shareShade{
  background: rgba(0,0,0,0.6);
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}

.posterBox{
  width: 690rpx;
  height: calc(100% - 40rpx);
  position: fixed;
  top: 40rpx;
  left: 30rpx;
  z-index: 9999;
  overflow-y: auto;
}

.btn{
  border: none!important;
  color: #000000;
  border-radius: 0;
}

.shareView .save{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: red;
  text-align: center;
  background:rgba(255,255,255,1);
  font-size:32rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  border:none;
  border-top:0;
  border-bottom: 0;
  border-radius:0;
}

.shareView .save_img{
  margin-bottom: 10rpx;
  border-top: 1rpx solid rgba(238,238,238,1);
}

.imgBox{
  display: block!important;
  width: 690rpx;
  height: 1000rpx;
  z-index: 9999;
  background-color: rgba(255,255,255,0.9);
}

.shareCanvas{
  position: fixed;
  top: 10000;
}

.save{
  width: 690rpx;
  height: 95rpx;
  line-height: 95rpx;
  letter-spacing: 1rpx;
  font-size: 35rpx;
  color: #fff;
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 30rpx;
  background-color: #fb452d!important;
}

button{
  font-size: 30rpx;
  line-height: 100rpx;
}