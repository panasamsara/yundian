/* pages/appointment/appointment.wxss */
page{
  width: 100%;
  height: 100%; 
  background: #f8f8f8;
}

.container{
  width: 100%;
  height: 100%; 
  position: relative;
  letter-spacing: 1rpx;
}

.appointment .list{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 120rpx;
  font-size: 32rpx;
  border-top: solid 1rpx #e5e5e5;
  background: #fff;

}

.appointment .name,.appointment .remark{
  border: none;
  margin-top: 20rpx;
}
.appointment .listLabel{
  width: 170rpx;
  margin-left: 35rpx;
}

.appointment .picker{
  display: flex;
  width: 545rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.appointment .info{
  width: 510rpx;
  color: #636363;
  font-size: 30rpx;
  margin-right: 35rpx;
}

.appointment .remark .info{
  height: 120rpx;
}

.appointment .info textarea{
  width: 100%;
  height: 80rpx;
  margin-top: 42rpx;
}

.appointment .detail{
  width: 495rpx;
  height: 120rpx;
  line-height: 120rpx;
  float: left;
  color: #999999;
  font-size: 28rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.appointment #startTime,.appointment #endTime{
  height: 120rpx;
  display: inline-block;
  color: #666666;
}

.appointment .chooseBox{
  width: 50rpx;
  height: 120rpx;
  line-height: 120rpx;
}

.appointment .choose{
  width: 16rpx;
  height: 28rpx;
}

.appoint{
  position: fixed;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  bottom: 0;
  left: 0;
  color: #ffffff;
  font-size: 32rpx; 
  text-align: center;
  background: -webkit-linear-gradient(left, #ff894f , #fe5c45); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #ff894f, #fe5c45); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #ff894f, #fe5c45); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #ff894f , #fe5c45); /* 标准的语法 */
}

.appointment .mask{
  position: fixed;
  z-index: 9000;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(114,114,114,0.5); 
}

picker-view{
  width: 100%;
  height: 480rpx; 
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 9999;
  background-color: #ffffff;
}

picker-view .date{
  text-align: center;
}

picker-view .close{
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  z-index: 9999;
  color: #1aad19;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

picker-view .close image{
  width: 30rpx;
  height: 30rpx;
}

.req{
  font-size: 44rpx;
  color: #ff0000;
  height: 44rpx;
  margin-left: 8rpx;
}

#time,#number{
  display: flex;
  align-items: center;
}