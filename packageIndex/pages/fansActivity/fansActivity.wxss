/* packageIndex/pages/fansActivity/fansActivity.wxss */
#fansActivity{
  letter-spacing: 1rpx;
}

#fansActivity #banner{
  width: 100%;
  height: 420rpx;
}

#fansActivity #head{
  color: #ffffff;
  position: relative;
  height: 420rpx;
}

#head #shade{
  width: 100%;
  height: 420rpx;
  background-color: rgba(0,0,0,0.3);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 888;
}

#head #title{
  width: 690rpx;
  position: absolute;
  bottom: 25rpx;
  left: 30rpx;
  line-height: 70rpx;
  z-index: 999;
}

#head #activityName{
  font-size: 36rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

#head #box{
  display: flex;
  justify-content: space-between;
}

#head #endTime{
  font-size: 24rpx;
}

#head #dynamicCount{
  font-size: 25rpx;
}

#head #dynamicCount text{
  color: #f19913;
  margin-right: 10rpx;
  font-weight: bold;
}

#fansActivity #info{
  padding: 30rpx;
  border-bottom: solid 55rpx #f8f8f8;
}

#info #logo{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

#info #fansInfo,#info .infoBox{
  display: flex;
}

.infoBox #nameBox{
  display: flex;
  flex-direction: column;
  width: 420rpx;
  padding: 0 20rpx;
  line-height: 40rpx;
  border-right: solid 1rpx #e5e5e5;
}

#nameBox #fansName{
  font-size: 32rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

#nameBox #orgName{
  font-size: 24rpx;
  color: #666666;
}

#fansInfo #joinNum{
  font-size: 28rpx;
  color: #666666;
  width: 170rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
}

#fansInfo #num{
  font-size: 35rpx;
  color: #333333;
}

#fansActivity #activityInfo{
  font-size: 24rpx;
  color: #9f9b98;
  position: relative;
  margin: 40rpx 0 60rpx 0;
  padding: 20rpx 50rpx;
}

#activityInfo #bgImg{
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -111;
  top: 0;
  left: 0;
}

#activityInfo #timeIcon{
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

#activityInfo #addressIcon{
  width: 26rpx;
  height: 32rpx;
  margin: 0 23rpx 0 3rpx;
}

#activityInfo .infoBox{
  flex-direction: column;
}

#activityInfo text{
  font-size: 28rpx;
  color: #666666;
  line-height: 55rpx;
  width: 538rpx;
}

#activityInfo .infoBox view{
  display: flex;
  align-items: center;
}

#activityInfo #placeBox{
  display: block;
}

#activityContent text{
  font-weight: bold;
  font-size: 44rpx;
}

#activityContent rich-text{
  padding: 40rpx 0;
  display: block;
}

