/* 轮播图重置小圆点样式 */
.dots{
  display: flex; 
  justify-content: center;
  flex-direction: row;
  width: 100%;
  height: 40rpx;
  text-align: center;
  margin-top: 20rpx;
}
.dot{
  margin-right: 10rpx;
  width:16rpx;
  height:4rpx;
  background:rgba(204,204,204,1);
  border-radius:2rpx;
}
.dot.active{
  width:40rpx;
  height:4rpx;
  border-radius:2rpx;
  background: #3B82EE;
}
/* 滚动定位 */
.tab-content{
  position: relative;
  display: flex;
  height: 88rpx;
  background: #fff;
  border-top: 1rpx solid #f3f3f3;
  box-shadow: 0 8rpx 8rpx 0 rgba(0, 0, 0, 0.09);
}
.tab-content.fixed{
  z-index: 999;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.tab-content>view{
  position: relative;
  flex: 1;
  font-size: 32rpx;
  line-height: 88rpx;
  text-align: center;
  color: #333;
  transition: all 0.15s ease-in-out;
}
.tab-content>view::after{
  position: absolute;
  content: '';
  display: block;
  height: 4rpx;
  width: 68rpx;
  margin-top: -4rpx;
  left: 50%;
  transform: translateX(-50%) scale(0);
  background: #3A83EF;
  transition: all 0.15s ease-in-out;
}
.tab-content>view.active{
  color: #3A83EF;
}
.tab-content>view.active::after{
  transform: translateX(-50%) scale(1);
}