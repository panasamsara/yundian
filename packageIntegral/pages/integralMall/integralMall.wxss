page{
  background: #f2f2f2;
}
.nav{
  position: relative;
  width: 100%;
  height:220rpx;
}
.bg,.bgview{
  width: 100%;
  position: absolute;
  height:220rpx;
  display: block;
}
.integral{
 font-size: 60rpx;
 color: #fff;
 text-align: center;
 padding: 30rpx  0 20rpx 0;
}
.integral image{
  width: 23rpx;
  height: 25rpx;
}
.btn view{
  width: 188rpx;
	height: 50rpx;
	background-color: #fef0f2;
	box-shadow: inset 0px 0px 5px 0px 
		rgba(0, 0, 0, 0.1);
	border-radius: 25rpx;
  font-size: 28rpx;
  color: #FB4957;
  line-height:  50rpx;
  text-align: center;
}
.btn view:first-child{
  margin-left: 130rpx;
}
.btn view:last-child{
  margin-right: 130rpx;
}
/* 消息滚动 */
.swiper_container {
  height: 50rpx;
  width: 100%;
}
.swiper_item {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}
.msg{
  width: 100%;
  height: 50rpx;
  color: #333;
  font-size: 22rpx;
  line-height: 50rpx;
  background: #fff;
}
.msg image{
  width: 42rpx;
  height: 36rpx;
  margin: 4rpx 6rpx 4rpx 20rpx;
  vertical-align:middle;
}
.content{
  width: 100%;
  padding-left: 32rpx;
  box-sizing: border-box;
  padding-bottom: 32rpx;
  overflow: hidden;
}
.content .list{
  width: 327rpx;
  margin-right: 32rpx;
  margin-top: 32rpx;
  background: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
  float: left;
  height: 500rpx;
}
.list image{
  width: 100%;
  height: 327rpx;
}
.list .title{
  font-size: 30rpx;
}
.list .price{
  color: #fff;
  font-size: 28rpx;
}
.list .jifen{
  font-size: 45rpx;
  color: #fb452c;
  margin: 30rpx 20rpx 10rpx;
}
.com{
  width: 280rpx;
	height: 60rpx;
  border-radius: 30rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  color: #fff;
  text-align: center;
  margin-left: 20rpx;
}
.list .exchange{
	background-color: #fb452c;
}
.list .deficiency{
  background-color: #DADADA;
}
.list text{
  font-size: 26rpx;
  margin-left: 20rpx;
}
.more{
  font-size: 30rpx;
  text-align: center;
  width: 680rpx;
  height: 80rpx;
  background: #fff;
  line-height: 80rpx;
  color: #666;
  margin-left: 34rpx;
  border-radius: 10rpx;
  margin-bottom: 28rpx;
}
.more image{
  width: 25rpx;
  height: 13rpx;
  vertical-align: middle;
  margin-left: 10rpx;
}
.end{
    background: #f2f2f2;
    color: #999;
    font-size: 26rpx;
}
.viewBg{
  width: 100%;
  height: 327rpx;
  position: relative;
  color: #fff;
}
.bgTitle{
  background:rgba(0,0,0,0.4);
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  padding:0 22rpx;
  box-sizing: border-box;
}
.emptyImg image{
  width: 360rpx;
  height: 300rpx;
  display: block;
  margin: 236rpx auto 20rpx;
}
.emptyImg view{
  color: #999;
  font-size: 24rpx;
  text-align: center;
}