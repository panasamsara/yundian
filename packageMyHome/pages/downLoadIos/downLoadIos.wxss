/* pages/store/code/code.wxss */
.container{
  padding: 60rpx 70rpx 0;
  letter-spacing: 2rpx;
}

.code .storeName{
  font-size: 32rpx;
  color:#333;
  line-height: 50rpx;
  display: block;
  text-align: center;
  font-family: 'PingFang-SC-Regular';
}


.code .storeCode .img-box{
  width: 410rpx;
  height: 410rpx;
  margin:0 auto;
}

.code .storeCode .img-box image{
  width: 410rpx;
  height: 410rpx;
  margin: 0 auto;
}

.code .scan{
  font-size: 26rpx;
  display: block;
  text-align: center;
  color: #999; 
}

.canvas-box{
  position: fixed;
  top:999999rpx;
  left: 0
}
.save{
  margin:30rpx auto;
}

/*新的页面样式*/
.bg{
  position: absolute;
  width: 100%;
  height: 100%;
  top:0;
  left: 0;
  z-index: -1;  
}
.bg image{
  position:absolute;
  bottom:0;
  width:100%;
  top:0;
  height:100%;
}
.storeInfo image{
  width:420rpx;
  height:50rpx;
}
.storeInfo .step-box{
  width: 100%;
  height: auto;
  margin: 0 auto;
  text-align: center;
}
.storeInfo .step-list{
  display: flex;
  margin:18rpx auto;
}
.storeInfo .step-list .step-one{
  flex: 1;
  font-size:28rpx;
}
