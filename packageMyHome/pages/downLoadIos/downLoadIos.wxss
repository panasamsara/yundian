.step-one .circle{
  width:40rpx;
  height:40rpx;
  border-radius:100%;
  background:#fb452c;
  color:#fff;
  float:left;
  line-height:40rpx;
  text-align:center;
}
.step-one .cirl-text{
  display: inline-block;
  margin-left:-20rpx;
}
.step-one .cirl-text text{
  display: block;
  text-align: left;
}
.logo{
  width: 100%;
  height: auto;
  text-align: center;
}
.logo image{
  width:100rpx;
  height:100rpx;
  margin:0 auto;
  border-radius:100%;
}
.storeCode{
  width: 100%;
  height: auto;
  background: #fff;
  padding:40rpx 0;
  border-radius: 15rpx;
}
.save{
  width: 80%;
  border-radius: 50rpx;
  background: #fe732d;
  color:#fff;
}
.downld{
  width: 80%;
  border-radius: 50rpx;
  background: #fb452c;
  color:#fff;
}