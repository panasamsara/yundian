/* pages/myHome/order/applyRefund/applyRefund.wxss */
.content{
  height: 100%;
  background: #fff;
  width: 100%;
  font-size: 28rpx;
}
.content .type{
  width: 100%;
  padding: 30rpx;
}
.content .type-tit{
  margin-bottom: 30rpx;
}
.content .bitian{
  color:#fb452c;
  margin-left:5rpx;
}
.content .type-val text{
  border:1px solid #fb452c;
  color:#fb452c;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
}
.hr{
  height: 20rpx;
  background: #f8f8f8;
}
.content .reson,.money,.remark,.img{
  padding: 30rpx;
}
.right-icon{
  width: 30rpx;
  height: 20rpx;
  float: right;
  margin-top:5rpx;
}
.reson picker{
  padding: 20rpx 10rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  color:#999;
}
.section__title{
  margin-bottom: 30rpx; 
}
.money-val{
  padding: 20rpx 10rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  color:#999;
}
.money-val text{
  color:#fb452c;
}
.section textarea{
  width: auto;
  background: #f5f5f5;
  padding: 20rpx 10rpx;
  border-radius: 10rpx;
}
.img{
  margin-bottom: 120rpx;
}
.img .section{
  margin-bottom: 30rpx;
}
.img .upload{
  display: flex;
}
.img .upload .img-list{
  flex: 1;
}
.upload .img-list image{
  width: 200rpx;
  height: 200rpx;
  margin:0 auto;
}
.sub{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: auto;
}
.sub button{
  width: 100%;
  height: 100rpx;
  color:#fff;
  text-align: center;
  line-height: 100rpx;
  background: linear-gradient(to right, #fe4b2c, #fe6e2c);
  border-radius: 0;
}