/* pages/chat/chat.wxss */
page{
  height: 100%;
}
.chat-bg{
  width: 100%;
  height: 100%;
  background: rgba(51,51,51,0.7)
}
.chat-box{
  height: auto;
  padding-top: 10rpx;
}
.photo{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  display: inline-block;
  background-color: red;
  margin: 0 20rpx;
  vertical-align: top;
}
.chat-detail{
  display: inline-block;
  width: 80%;
  margin-bottom: 20rpx;
}
.user-name{
  color: #fff;
  height: 50rpx;
  margin-bottom: 20rpx;
}
.chat-content{
  width: 400rpx;
  word-wrap:break-word ;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #666;
}
.chat-content::before{
    content: "";
    display: block;
    width: 12rpx;
    height: 12rpx;
    position: relative;
    left:-20rpx;
    background-color: #666;
    transform: rotateZ(45deg) translateX(-50%);	
}
