/* pages/chatList/chatList.wxss */
page{
  background-color: #f8f8f8;
}
.chat-list{
  height: 100rpx;
  background-color: #fff;
  display: block;
  padding: 24rpx;
  border-bottom: 1rpx solid #ccc;
}
.list{
  width: 100%;
  height: 100%;
}
.photo{
  height: 100rpx;
  width: 100rpx;
  border-radius: 100rpx;
  background-color: red;
  display: inline-block;
}
.photo image{
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
.info{
  display: inline-block;
  width: 400rpx;
  height: 100rpx;
  line-height: 50rpx;
  position: relative;
  top: -15rpx;
  padding-left: 20rpx;
}
.user-name{
  font-size: 32rpx;
}
.detail{
  font-size: 28rpx;
  color: #999;
}
.date{
  display: inline-block;
  float: right;
  width: 160rpx;
  height: 100rpx;
  font-size: 28rpx;
  color: #999;
  padding-top:3rpx;
}