<!-- banner区 -->
<swiper indicator-dots='{{indicatorDots}}' autoplay='{{autoplay}}' interval='{{interval}}' duration='{{duration}}'>
  <block wx:for="{{imgUrls}}" wx:key='key'>
    <swiper-item>
      <image src='{{item}}' mode='aspectFit' data-src='{{item}}' bindtap='previewImage'></image>    
    </swiper-item>
  </block>
</swiper>
<scroll-view scroll-y="true">
  <view class='detail'>
    <text class='title'>{{goodsName}}</text>
    <rich-text class="rich-text" nodes="{{descContent}}"></rich-text>
    <text class='price'>¥{{batchPrice}}</text>
    <view><span>库存 {{stockBalance}}</span><span>销量 {{payCount}}</span></view>
  </view>
  <view class='separate'></view>
  <!-- 拼单 -->
  <view class='spellList'>
    <view class='top'>
      <text>29人在拼单, 可直接参与</text>
      <image src='../../images/yundian_spxq_gengduo.png' bindtap='toLayer'></image>
    </view>
    <view class='item clearfix'>
      <image src=''></image>
      <text>喵喵喵</text>
      <button bindtap='toJoin'>去拼单</button>      
      <view class='cont'>还差<span>3人</span>拼成<view><span>剩余15:30:26</span></view></view>
    </view>
    <view class='item clearfix'>
      <image src=''></image>
      <text>喵喵喵</text>
      <button bindtap='toJoin'>去拼单</button>      
      <view class='cont'>还差<span>3人</span>拼成<view><span>剩余15:30:26</span></view></view>
    </view>    
  </view>
  <view class='separate'></view>
  <!-- 商品评价 -->
  <view class='dingwei'>
    <text class='appraise'>商品评价({{all}})</text>
    
    <view class='user' wx:for="{{userData}}" wx:key="key">
      <view class='user-top'>
        <image src='{{item.memberImgName}}'></image>
        <span>{{item.userCode}}</span> 
        <view class='right'>
          <view class='star'>
            <block wx:for="{{item.score}}" wx:key="name">
              <image src='../../images/fullstar.png'></image>
            </block>
            <block wx:for="{{5-item.score}}" wx:key="key">
              <image src='../../images/emptystar.png'></image>
            </block>            
          </view>
        </view> 
      </view>
      <text class='text-remark'>{{item.commentContent}}</text>
      <view class='user-pic clearfix' wx:for="{{item.imgNameList}}" wx:key="name">
        <image src='{{item}}'></image>
      </view>
      <view class='user-info clearfix'>
        <span>规格: {{item.stockName}}</span>
        <span>{{item.creatTime}}</span>
      </view>
    </view>
    <view class='zw-pic {{hideView?"hide":"show"}}'>
      <view><image src='../../images/empty.png'></image></view>
    </view>    
    <image src='../../images/yundian_spxq_gengduo.png' bindtap='toAppraise' class='{{hideView?"show":"hide"}}'></image>  
  </view>  
   
  <!-- 问大家 -->
  <view class='dingwei'>
    <text>问大家({{askAcount}})</text>
    <image src='../../images/yundian_spxq_gengduo.png' bindtap='toAsk' class='{{hideView?"show":"hide"}}'></image> 
    <view wx:for="{{askData}}" wx:key="key">
      <view class='ask'>
        <view class='ask-icon'>问</view>
        <text>{{item.content}}</text>
        <span>{{item.answers}}个回答</span>
      </view> 
      <view class='answer'>
        <view class='answer-icon'>答</view>
        <text>{{item.answerCount}}</text>
      </view>    
    </view>
    <view class='zw-pic {{hideView?"hide":"show"}}'>
      <view><image src='../../images/empty.png'></image></view>
    </view>    
  </view> 
  <view class='separate'></view>

  <view class='shop clearfix'>
    <image src=''></image>
    <view class='content'>
      <text>乐町官方旗舰店</text>
      <block wx:for='{{4}}' wx:key='key'>
        <image src='../../images/fullstar.png'></image>
      </block>
      <block wx:for='{{1}}' wx:key='key'>
        <image src='../../images/emptystar.png'></image>
      </block>      
    </view>
    <view class='goShop' bindtap='goShop'>进店></view>
  </view>
  <view class='tips'>
    <text>嬉皮生活, 有你有我! 生活的精彩, 由你的加入开始</text>
  </view> 
 <view class='separate'></view>
 <view class='temp'></view>
</scroll-view>
