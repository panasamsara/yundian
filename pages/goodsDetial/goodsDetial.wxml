<!-- banner区 -->
<swiper indicator-dots='{{indicatorDots}}' autoplay='{{autoplay}}' interval='{{interval}}' duration='{{duration}}'>
  <block wx:for="{{imgUrls}}" wx:key='key'>
    <swiper-item>
      <image src='{{item}}' data-src='{{item}}' bindtap='previewImage'></image>    
    </swiper-item>
  </block>
</swiper>
<scroll-view scroll-y="true">
  <view class='detail'>
    <text class='title'>{{goodsName}} {{descContent}}</text>
    <text class='price'>¥{{batchPrice}}</text>
    <view><span>库存 {{stockBalance}}</span><span>销量 {{payCount}}</span></view>
  </view>
  <view class='separate'></view>
  <!-- 商品评价 -->
  <view class='dingwei'>
    <text class='appraise'>商品评价({{all}})</text>
    
    <view class='user' wx:for="{{userData}}" wx:key="key">
      <view class='user-top'>
        <image src='{{item.memberImgName}}'></image>
        <span>{{item.userCode}}</span> 
        <view class='right'>
          <view class='star'>
            <block wx:for="{{item.score}}" wx:key="name">
              <image src='../../images/fullstar.png'></image>
            </block>
            <block wx:for="{{5-item.score}}" wx:key="key">
              <image src='../../images/emptystar.png'></image>
            </block>            
          </view>
        </view> 
      </view>
      <text class='text-remark'>{{item.commentContent}}</text>
      <view class='user-pic clearfix' wx:for="{{item.imgNameList}}" wx:key="name">
        <image src='{{item}}'></image>
      </view>
      <view class='user-info clearfix'>
        <span>规格: {{item.stockName}}</span>
        <span>{{item.creatTime}}</span>
      </view>
    </view>
    <view class='zw-pic {{hideView?"hide":"show"}}'>
      <view><image src='../../images/empty.png'></image></view>
    </view>    
    <image src='../../images/yundian_spxq_gengduo.png' bindtap='toAppraise'></image>  
  </view>  
   
  <!-- 问大家 -->
  <view class='dingwei'>
    <text>问大家({{askAcount}})</text>
    <image src='../../images/yundian_spxq_gengduo.png' bindtap='toAsk'></image> 
    <view wx:for="{{askData}}" wx:key="key">
      <view class='ask'>
        <view class='ask-icon'>问</view>
        <text>{{item.content}}</text>
        <span>{{item.answers}}个回答</span>
      </view> 
      <view class='answer'>
        <view class='answer-icon'>答</view>
        <text>{{item.answerCount}}</text>
      </view>    
    </view>

  </view> 

  <view class='separate'></view>
  <text class='detial-text'>商品详情</text>
  <block wx:for="{{detailImg}}" wx:key="name">
    <image class='image_detail' src='{{item}}'></image>
  </block>
  <view class='temp'></view>
</scroll-view>
<!-- 底部悬浮栏 -->
<view class='detail-nav'>
  <view class='tabBar'>
    <view class='tab-list' bindtap='chat'>
      <view class='icon-img'>
        <image class='icon' src='../../images/1_03.gif'></image>
      </view>
      <view class='text'>客服</view>
    </view>
    <view class='tab-list'>
      <view class='icon-img'>
        <image class='icon' src='../../images/car.png'></image>
      </view>
      <view class='text'>店铺</view>
    </view>       
  </view>
  <button class='add' bindtap='addCar'>加入购物车</button>
  <button class='buy' bindtap='immeBuy'>立即购买</button>
</view>

