/* 倒计时区 */
.countDown{
  width:100%;
  height: 100rpx;
}
.countDown .left{
  box-sizing: border-box;
  padding-left: 20rpx;
  width:100%;
  height: 100%;
  line-height: 100rpx;
  background-color: #fb452c;
  float:left;
  font-size: 46rpx;
  color:#fff; 
}
.countDown .left>span{
  font-size: 30rpx;
  padding-left: 10rpx;
  position: relative;
}
.countDown .left>span::after{
  content: '';  
  height: 1rpx;
  width:126rpx;
  background-color: #fff;
  position: absolute;
  left: 10rpx;
  top:20rpx;
}
