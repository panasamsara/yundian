.activity{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 20rpx 0 30rpx 0;
  border-radius: 0 0 15rpx 15rpx;
  box-shadow: 0px 5px 9px 0px 
  rgba(0, 0, 0, 0.1);
  height:560rpx;
  overflow:scroll;
}
.activity .item{
  margin-top: 30rpx;
  width:155rpx;
  height:145rpx;
	background-color: #ffffff;
	box-shadow: 0px 5px 9px 0px 
		rgba(0, 0, 0, 0.18); 
	border-radius: 15px;
  margin-left: 30rpx;
  position: relative;
  color: #333;
  font-size: 28rpx;
}
.item .sj{
  position: absolute;
  width: 47rpx;
  height: 47rpx;
  right: 0;
  top: 0;
}
.item .typetext{
  position: absolute;
  font-size: 18rpx;
  color: #333;
  top:2rpx;
  right:2rpx;
  width: auto;
  transform:rotate(40deg);
  text-align: center;
}
.item .zs{
  width: 100%;
  height: 30rpx;
  position: absolute;
  bottom: 0;
}
.item .zstext{
  position: absolute;
  bottom: 0;
  font-size: 18rpx;
  width: 100%;
  display: block;
  text-align: center;
  line-height: 30rpx;
  letter-spacing: 4rpx;
  color: #fff;
}
.item .itemName{
  width: 100%;
  text-align: center;
  margin-top: 30rpx;
