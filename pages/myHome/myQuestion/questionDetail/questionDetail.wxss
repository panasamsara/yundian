}
.font28{
  font-size: 28rpx;
}
.font34{
  font-size: 34rpx;
}
.priceColor{
  color: #ff0036;
}
.color999{
  color: #999;
}
.addessNull image{
    width: 340rpx;
    height: 310rpx;
