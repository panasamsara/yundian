page{
  padding-bottom: 50rpx;
  background: #f8f8f8;
}
.left{
  float: left;
}
.right{
  float: right;
}
.mr15{
  margin-right: 15rpx;
}
.font24{
  font-size: 24rpx;
}
.font28{
  font-size: 28rpx;
}
.font34{
  font-size: 34rpx;
}
.priceColor{
  color: #ff0036;
}
.color999{
  color: #999;
}
.header{
  position: fixed;
  top: 0;
  background: #fff;
  width: 100%;
  border-top:1px solid #e0e0e0; 
  border-bottom:1px solid #e0e0e0; 
}
.manageTitle{
  font-size: 32rpx;
  color: #333;
  display: flex;
  background:#fff;
}
.manageTitle>text{
  flex: 2;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  cursor: pointer;
}
.manageTitle text.active{
  border-bottom: 4rpx solid #fb452c;
  color: #fb452c;
  padding:15rpx 0;
}
.wrap{
 padding-top:100rpx;
}
.addessNull image{
    width: 340rpx;
    height: 310rpx;
    display: block;
    margin: 300rpx auto 20rpx;
}
.addessNull{
  text-align: center;
  font-size: 28rpx;
  color: #999;
}
.content{
  background: #fff;
    margin-bottom:20rpx;
}
.content .list{
  font-size: 28rpx;
  color: #333;
  margin-top: 70rpx;
  background:#fff;
}
.list>view{
  overflow: hidden;
}
.content .list:first-child{
  margin-top: 0;
}
.content .shop{
  overflow: hidden;
  padding: 30rpx;
}
.content .shop .shopImg{
  width: 32rpx;
  height: 28rpx;
  vertical-align: middle;
}
.content .shop .rightIcon{
  width: 16rpx;
  height: 26rpx;
  vertical-align: middle;
}
.rightType{
  color: #fb452c;
}
.shopList{
  margin-top: 30rpx;
}
.orderInfo{
  padding: 30rpx;
  overflow: hidden;
  background:#f8f8f8;
}
.orderInfo>.left image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
}
.orderInfo>.right{
  width: 480rpx;
}
.orderInfo>.right>text{
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 30rpx;
}
.orderInfo>.right .size{
  color: #999;
}
/*添加新的按钮*/
.noover,.over{
  height: 100rpx;
}
.noover .button,.over .button{
  width:180rpx;
  height:70rpx;
  font-size:28rpx;
  float:right;
  margin:15rpx 30rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 15rpx;
}
.white-btn{
  background:#fff !important;
  color:#333;
  border:1px solid #333;
}
.red-btn{
  background:#fb452d !important;
  color:#fff !important;
  border:1px solid #fb452d;
}
.total-price{
  height:78rpx;
  padding:0 30rpx;
  line-height:78rpx;
  border-bottom:1rpx solid #dfdfdf;
}
/*下单成功*/
.modal-box {
width:100%;
height:100%;
z-index:55;
background:rgba(0,0,0,0.4);
overflow:hidden;
position: absolute;
left:0;
top: 0;
}
.order-tip .modal-body{
  height: 356rpx;
  margin:50% auto 0;
  position:relative;
  border-radius:10rpx;
  width:80%;
  background:#fff;
}
.order-tip .order-success{
  position: absolute;
  top:-100rpx;
  left: 50%;
  margin-left: -155rpx;
  width: 310rpx;
  height: 220rpx;
}
.order-tip .modal-content{
  height: 120rpx;
  width: 100%;
  padding-top:160rpx;
  font-size: 28rpx;
  color:#999;
  border-radius: 10rpx;
}
.order-tip .modal-content text{
  display: block;
  text-align: center;
  margin-bottom:15rpx;
}
.order-tip .modal-btn{
  border-top:1px solid #e4e4e4;
}
.order-tip .modal-btn text{
  width:100%;
  float: left;
  background: #fff;
  border:0;
  border-radius: 0;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  font-size:26rpx;
}
.order-tip .modal-btn text:first-child{
  border-right: 1rpx solid #e4e4e4;
  color:#999;
}
.order-tip .modal-btn text:last-child{
  color:#ff8979;
}
.add-adree{
  height:100rpx;
  line-height:100rpx;
  padding-left: 31rpx;
  background:#fff;
  border-top:1px solid #e4e4e4;
  font-size:30rpx;
  color:#333;
  margin-bottom:20rpx;
}