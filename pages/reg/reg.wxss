/* pages/reg/reg.wxss */
page{
  width: 100%;
  height: 100%;
}

.reg{
  position: relative;
  text-align: center;
  width: 100%;
  height: 100%;
  letter-spacing: 2rpx;
}

#bg{
  position: absolute;
  z-index: -9999;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

#logo{
  width: 100%;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
  margin-bottom: 194rpx;
  padding-top: 104rpx;
}

#logo image{
  width: 140rpx;
  height: 140rpx;
  margin-bottom: 28rpx;
}

#poster{
  font-size: 28rpx;
  color: #666666;
  font-weight: bold;
}

#login{
  width: 650rpx;
  height: 84rpx;
  border-radius: 42rpx;
  line-height: 84rpx;
  color: #ffffff;
  font-size: 30rpx;
  background: -webkit-linear-gradient(left, #ff722b, #fb462b); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(right, #ff722b, #fb462b); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(right, #ff722b, #fb462b); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #ff722b, #fb462b); /* 标准的语法 */
}

#warn{
  position: fixed;
  left: 0;
  bottom: 60rpx;
  width: 100%;
  color: #999999;
  font-size: 20rpx;
}

.mask{
  position: fixed;
  z-index: 9000;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(114,114,114,0.5); 
}

.modal{
  width: 600rpx;
  height: 300rpx;
  position: fixed;
  top: 400rpx;
  left: 75rpx;
  background-color: #ffffff;
  z-index: 9999;
  border-radius: 4rpx;
}

.title{
  display: block;
  font-size: 30rpx;
  width: 530rpx;
  height: 80rpx;
  line-height: 80rpx;
  padding: 30rpx 35rpx;
  text-align:left;
  margin-bottom: 40rpx;
}

#cancel,#confirm{
  font-size: 28rpx;
  width: 144rpx;
  height: 70rpx;
  line-height: 70rpx;
}

.modal button{
  margin: 0;
  padding: 0
}

.modal button::after{ 
  border: none; 
}

.modal .button-hover {
  background-color: #ffffff;
} 

#option{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  padding-right: 35rpx;
}