<!--pages/secKill/secKill.wxml-->
<view class='container secKill'>
  <view wx:for="{{list}}" wx:key="index" class='list'>
    <image src='{{item.goodsPic}}' class='pic'></image>
    <view class='info'>
      <text class='title'>{{item.goodsName}}</text>
      <view class='price'>
        <text class='newPrice'>￥{{item.minPrice}}</text>
        <text class='oldPrice'>￥{{item.minOriginalPrice}}</text>
      </view>
      <view class='buyBox'>
        <view class='end'>距结束<text>{{item.rh?item.rh:0}}</text>:<text>{{item.m?item.m:0}}</text>:<text>{{item.s?item.s:0}}</text></view>
         <view class='buy'>
          <navigator url="../goodsDetial/goodsDetial?shopId={{item.shopId}}&goodsId={{item.goodsId}}&cUser={{item.cUser}}&groupBuyingId={{item.id}}&status=2">马上抢</navigator>
        </view> 
      </view>
    </view>
  </view>
</view>