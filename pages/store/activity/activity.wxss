/* pages/store/activity/activity.wxss */
.container{
  padding: 20rpx 35rpx;
  letter-spacing: 1rpx;
}

.activity .list{
  border-radius: 12rpx;
  box-shadow: 0rpx 0rpx 20rpx 8rpx #e2e2e2;
  margin-bottom: 20rpx;
}

.activity .list image{
  width: 100%;
  height: 280rpx;
  border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
}

.activity .act,.activity .actInfo{
  display: flex;
  justify-content: space-between;
  padding: 0 25rpx;
  font-size: 30rpx;
  line-height: 50rpx;
  color: #333333;
}

.activity .act{
  font-size: 32rpx;
}

.activity #title{
  color: #ff5c48;
}

.activity #activity{
  color:#333333;
}

.activity #time{
  color: #868686;
}