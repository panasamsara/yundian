/* pages/store/dynamic/dynamic.wxss */
page {
   height: 100%; 
}

.dynamic {
  align-items: flex-start;
  letter-spacing: 1rpx;
  padding: 30rpx
}

.dynamic .dynamicBox{
  margin-bottom: 40rpx;
}

.dynamic .headBox{
  display: flex;
  flex-direction: row;
  overflow: hidden;
  align-items: center;
}

.dynamic .headPic image{
  width: 102rpx;
  height: 102rpx;
  border-radius: 50%;
}

.dynamic .userName,.dynamic .dynamicText{
  font-size: 34rpx;
}

.dynamic .storeName,.dynamic .date{
  font-size: 29rpx;
  color: #989898;
}

.dynamic .infoBox{
  width: 488rpx;
  padding-left: 20rpx;
  line-height: 50rpx;
}

.dynamic .infoBox image{
  width:30rpx;
  height: 28rpx;
  margin-right: 15rpx;
}

.dynamic .store{
  display: flex;
  align-items: center;
}

.dynamic .date{
  width: 100rpx;
}

.dynamic .dynamicText{
  padding: 25rpx 0;
}

.dynamic .dynamicText text{
  display: inline-block;
  width: 100%;
  color: #4a4a4a;
}

.dynamic .imageBox image{
  height: 220rpx;
  margin-right: 15rpx;
  border-radius: 12rpx;
}

.dynamic .imageBox image.type1{
  width: 690rpx;
  height: 350rpx;
}

.dynamic .imageBox image.type2{
  width: 337.5rpx;
}

.dynamic .imageBox image.type3{
  width: 220rpx;
}

.dynamic .videoBox video{
  width: 100%;
}

.dynamic .imageBox image.type1{
  margin: 0
}

.dynamic .imageBox image.type2:nth-child(2n){
  margin: 0
}

.dynamic .imageBox image.type3:nth-child(3n){
  margin: 0
}

.dynamic .readInfo{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: #999999;
  font-size: 26rpx;
  padding: 25rpx 0;
}

.dynamic .readInfo image{
  width:36rpx;
  height: 30rpx;
  margin-right: 15rpx;
}

.dynamic .replyInfo,.dynamic .reply,.like{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.dynamic .reply{
  margin-right: 50rpx;
}

.show{
  display: block;
}

.hidden{
  display: none;
}
