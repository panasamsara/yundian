/* pages/store/fans/fans.wxss */
.fans{
  padding: 0 30rpx 30rpx 30rpx;
}

.fans .list{
  margin-bottom: 40rpx;
}

.fans .banner{
  position: relative;
  height: 280rpx;
  text-align: center;
  padding-top: 120rpx;
}

.fans .banner .bannerPic{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
  z-index: -999;
}

.fans .banner .sizeBox{
  display: flex;
  align-items: center;
  justify-content: center;
}

.fans .banner .sizePic{
  width: 32rpx;
  height: 28rpx;
  margin-right: 15rpx;
}

.fans .banner .triangle{
  position: absolute;
  left: 329rpx;
  bottom: 0;
  width: 32rpx;
  height: 20rpx;
}

.fans .teamInfo{
  color: #ffffff;
  line-height: 60rpx;
  background:rgba(0,0,0,0.3);
}

.fans .detailName{
  font-size: 32rpx;
  display: block;
}

.fans .size{
  font-size: 28rpx;
}

.fans .teamBox{
  white-space: nowrap;
}

.fans .team{
  display: inline-block;
  width: 204rpx;
  margin: 20rpx 20rpx 0 0;
}

.fans .team:last-of-type{
  margin-right: 0;
}

.fans .team image{
  width: 100%;
  height: 201rpx;
}

.fans .infoBox{
  display: flex;
  flex-direction: column;
  text-align: center;
  line-height: 40rpx;
  color: #333333;
}

.fans .teamName{
  font-size: 24rpx;
}

.fans .total{
  font-size: 20rpx;
}

.blank{
  display: flex;
  height: 100%;
  flex-direction: column;
  align-items: center;
  letter-spacing: 2rpx;
}

.blank image{
  width: 334rpx;
  height: 330rpx;
  margin-top: 250rpx;
}

.blank text{
  font-size: 29rpx;
  color: #969696;
  line-height: 80rpx;
}