/* pages/store/headline/headline.wxss */
.headline{
  padding: 0 30rpx 30rpx 30rpx;
  letter-spacing: 1rpx;
}

.headline .list{
  margin-bottom: 40rpx;
}

.headline .contentBox{
  display: flex;
  flex-direction: row;
}

.headline .contentBox image{
  width: 220rpx;
  height: 270rpx;
}

.headline .contentBox .text{
  display: flex;
  flex-direction: column;
  width: 470rpx;
  height: 270rpx;
}

.headline .contentBox .titles{
  line-height: 50rpx;
  font-size: 34rpx;
  color: #333333;
  margin: 10rpx 0 10rpx 25rpx;
  word-break: break-all;
}

.headline .contentBox .content{
  height: 160rpx;
  font-size: 28rpx;
  color: #666666;
  margin-left: 25rpx;
  letter-spacing: 2rpx;
}

.headline .infoBox{
  display: flex;
  justify-content: space-between;
  line-height: 65rpx;
  font-size: 24rpx;
  color: #999999;
}

.blank{
  display: flex;
  height: 100%;
  flex-direction: column;
  align-items: center;
  letter-spacing: 2rpx;
}

.blank image{
  width: 334rpx;
  height: 330rpx;
  margin-top: 250rpx;
}

.blank text{
  font-size: 29rpx;
  color: #969696;
  line-height: 80rpx;
}