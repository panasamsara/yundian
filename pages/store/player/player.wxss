/* pages/store/player/player.wxss */
 .container{
  padding: 50rpx;
}

.player .list{
  margin-bottom: 40rpx;
}

.player .banner{
  width: 100%;
  height: 520rpx;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
} 

.player .titleBorder{
  width: 120rpx;
  height: 8rpx;
}

.player .title{
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 32rpx;
  color: #333333;
  line-height: 75rpx;
}

.player .text{
  font-size: 28rpx;
  color: #666666;
  padding: 30rpx;
  letter-spacing: 2rpx;
}
